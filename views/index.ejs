<%-include('partials/header') -%>
<div class="container mt-5">
    <%-include('partials/messages') -%>
    <table class="table table-bordered" width="100%" cellspacing="0" id="tryAgain" name="tryAgain">
        <thead>
            <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach((employee)=>{ %>
                    <tr>
                        <td><%= employee.name %></td>
                        <td><%= employee.designation %></td>
                        <td><%= employee.salary %></td>
                        <td><a class="btn btn-success" href="/edit/<%=employee.id%>">Edit</a> 
                        <form style="display: inline;" action="/delete/<%=employee.id%>?_method=DELETE" method="POST">
                            <input type="hidden" name="_method"value="DELETE">
                            <button style="cursor:pointer" type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        </td>
                    </tr>
               <% })  %>
               
            </tbody>
        </table>
        
    </div>
  <%-include('partials/footer')-%>